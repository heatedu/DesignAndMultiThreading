{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build BookMyShow",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path build) { Remove-Item build -Recurse -Force }; Write-Host 'Build directory cleaned' -ForegroundColor Green"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (-not (Test-Path build)) { mkdir build }; cd build; cmake .."
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "cd build; cmake --build . --config Release"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Run BookMyShow",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "cd build/Release; .\\BookMyShow.exe"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}

